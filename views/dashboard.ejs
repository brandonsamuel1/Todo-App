<%- include('partials/header') %>

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="#">Todo App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  
  <main role="main">
    <div class="jumbotron">
      <div class="container">
        <h1 class="display-3">Welcome to your dashboard!</h1>
        <br>
        <p><a class="btn btn-primary btn-lg" href="/create" role="button">Create New Todo &raquo;</a></p>
      </div>
    </div>
  
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <% for(let i = 0; i < list.length; i++) { %>
          <h2><%= list[i].title %></h2>
          <p><%= list[i].description %></p>
          <p><a class="btn btn-secondary" href="lists/<%= list[i]._id %>" role="button">View details &raquo;</a></p>
          <form method="POST" action="lists/<%= list[i].title %>?_method=DELETE">
            <button class="btn btn-danger" type="submit" name="_method">Delete List <span><i class="fas fa-trash-alt"></i></span></button>
          </form>
          <br>
          <% } %>
        </div>
      </div>
    </div>
  
  </main>
  
<%- include('partials/footer') %>